{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "commit-message-lint",
      "command": "dotnet",
      "args": ["script", ".husky/commit-lint.csx", "${args}"],
      "hook": "commit-msg"
    },
    {
      "name": "Run CSharpier",
      "command": "dotnet",
      "args": ["csharpier", "${staged}"],
      "include": ["**/*.cs"]
    }
  ]
}